<nav class="breadcrumb" aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/" class="crumb text-dark">home</a></li>
    <li class="breadcrumb-item active">Recipes</li>
  </ol>
</nav>
<h1>Recipes</h1>
<div class="row row-cols-1 row-cols-md-2 row-cols-lg-5 py-5 m-3">
    <%if(recipes != ''){%>
     <% recipes.forEach((recipe)=>{%>
        <a href="/recipes/<%=recipe._id%>" class="category-link text-center">
          <div class="recipe-img shadow">
            <img src="<%=recipe.image%>" alt="<%= recipe.name %>recipe" loading="lazy" class="px-md-3">
          </div>
          <div class="pt-1"><%= recipe.name %></div>
        </a>

        
     <%})%>

    <%}%>
</div