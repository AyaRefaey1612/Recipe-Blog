<nav class="breadcrumb"  aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/" class="crumb text-dark">home</a></li>
        <li class="breadcrumb-item"><a href="/latest-recipes" class="crumb text-dark">Recipes</a></li>
        <li class="breadcrumb-item active" aria-current="page"><%=oneRecipe[0].name%></a></li>
    </ol>
</nav>

<div class="row">
<% if(oneRecipe !== ""){%>
  <div class="col-12 col-md-4">
    <img src="../uploads/<%=oneRecipe[0].image%>" alt="<%=oneRecipe[0].name%>" class="img-fluid sticky-top">
  </div>

  <div class="col-12 col-md-8">
   <div class="row">
    <div class="col-12"><h1><%=oneRecipe[0].name%></h1></div>
    <div class="col-12 mb-4"><i class="bi bi-tag"></i> <%=oneRecipe[0].categoryName%></div>
    <div class="col-12">
    <h4>Cooking Instructions:</h4>
     <%= oneRecipe[0].description %>
    </div>
  </div>
 <div class="row pt-4">
  <div class="col-12">
    <h4>Ingredients:</h4>
    <ul class="list-group list-group-flush">
     <% for(let i=0; i<oneRecipe[0].ingredients.length; i++) {%>
     <li class="list-group-item"><%=oneRecipe[0].ingredients[i]%></li>
    <% } %>
    </ul>
    <h5>This Recipe created by: <%= oneRecipe[0].email %></h5>
   </div>
  </div>
  <%if(user){%>
  <% if(user.email == recipeEmail){ %>
   <div class="row buttons my-5 col-12">
    <form class="col-6" action="/edit/<%=oneRecipe[0]._id%>" method="get">
      <button class="btn btn-dark">Edit</button>
    </form>
    <form class="col-6 text-end" action="/delete/<%=oneRecipe[0]._id %>?_method=DELETE" method="post" onsubmit="return confirm('are you sure?')">
     <button class="btn btn-dark">Delete</button>
    </form>
   </div>
   <% } %>
  <% } %>
<% }else{ %>
    <h1>not found</h1>
<% } %>
     </div>
  </div>
 </div>
</div>


