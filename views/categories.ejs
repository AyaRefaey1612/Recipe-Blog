<nav class="breadcrumb" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/" class="crumb text-dark">Home</a></il>
        <li class="breadcrumb-item active" aria-current="page">Categories</li>
    </ol>
</nav>
<h3>Explore Categories</h3>
<div class="row row-cols-2 row-cols-lg-5 p-5">
 <%if(categories != ''){%>
  <% categories.forEach(category=>{%>
    <a href="/categories/<%=category._id%>" class="category-link text-center">
        <div class="category-img shadow">
            <%if(category.image !=""){  %>
             <img src="<%=category.image%>" alt="<%=category.name%> category" loading="lazy">
            <% } %>

        </div>
        <div class="pt-1"><%=category.name %></div>
    </a>
 <%}) %>
<% } %>
</div>