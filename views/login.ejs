<% if(flashError.length >0){%>
<div class="alert alert-danger" role="alert"><%=flashError %></div>
<% } %>
<form class="row px-4 fw-bold" method="post" action="/login">
  <div class="pass col-12">
    <label for="pass" class="px-0 py-2 mb-0">Password:</label>
    <input type="password" name="pass" id="pass" class="form-control" />
  </div>

  <div class="email col-12">
    <label for="email" class="px-0 py-2 mb-0">Email:</label>
    <input type="email" name="email" id="email" class="form-control" />
  </div>

  <div class="submit text-center col-12 mt-3">
    <button class="btn btn-lg btn-dark">login</button>
  </div>
</form>
