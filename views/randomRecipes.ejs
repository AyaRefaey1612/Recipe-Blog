<h3>Explore Random Recipe</h3>
<div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 pt-2 text-center">
    <% if(randomRecipe != ""){ %>
      <a href="/recipes/<%=randomRecipe._id%>" class="category-link">
        <div class="recipe-img shadow pt-2">
         <img src="<%=randomRecipe.image%>" alt="<%=randomRecipe.name%>" loading="lazy">
        </div>
        <div class="pt-1"><%=randomRecipe.name%></div>
      </a>

    <% } %>     
</div>